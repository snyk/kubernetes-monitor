{
  "compilerOptions": {
    "outDir": "./dist",
    "incremental": true,
    "target": "es2021",
    "module": "commonjs",
    // "module": "NodeNext", // or Node18/NodeNext
    // "target": "ESNext",
    "sourceMap": true,
    "pretty": true,
    "importHelpers": true,
    "strict": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "noImplicitReturns": true,
    "esModuleInterop": true
  },
  "include": [
    "./src/**/*"
  ]
}
